    {
      "@type": "Action",
      "@id": "#gis:ogr2ogr-convert",
      "name": "Convert Vector Data with OGR2OGR",
      "identifier": "ogr2ogr-convert",
      "description": "Execute ogr2ogr from Node.js to convert vector formats or import to PostGIS",
      "instrument": {
        "@type": "SoftwareApplication",
        "identifier": "ogr2ogr.exe"
      },
      "target": {
        "@type": "EntryPoint",
        "urlTemplate": "{QGIS_DIR}\\bin\\ogr2ogr.exe",
        "actionApplication": {
          "@type": "SoftwareSourceCode",
          "programmingLanguage": "JavaScript",
          "runtimePlatform": "Node.js"
        },
        "example": [
          {
            "@type": "HowToDirection",
            "name": "Shapefile to GeoJSON",
            "text": "ogr2ogr -f GeoJSON output.geojson input.shp"
          },
          {
            "@type": "HowToDirection",
            "name": "Import to PostGIS",
            "text": "ogr2ogr -f PostgreSQL PG:\"dbname=mydb host=localhost user=postgres\" input.shp -nln table_name"
          },
          {
            "@type": "HowToDirection",
            "name": "Transform CRS",
            "text": "ogr2ogr -t_srs EPSG:4326 -s_srs EPSG:3857 output.shp input.shp"
          },
          {
            "@type": "HowToDirection",
            "name": "Clip by extent",
            "text": "ogr2ogr -clipsrc minX minY maxX maxY output.shp input.shp"
          }
        ]
      },
      "object": {
        "@type": "DataDownload",
        "encodingFormat": [
          "application/x-esri-shapefile",
          "application/geo+json",
          "application/vnd.google-earth.kml+xml",
          "application/geopackage+sqlite3",
          "text/csv"
        ],
        "description": "Input vector data in supported format"
      },
      "result": {
        "@type": "DataDownload",
        "encodingFormat": [
          "application/geo+json",
          "application/x-esri-shapefile",
          "application/vnd.google-earth.kml+xml",
          "application/geopackage+sqlite3",
          "application/x-postgresql"
        ],
        "description": "Converted vector data or PostGIS import"
      },
      "additionalProperty": [
        {
          "@type": "PropertyValue",
          "name": "implementationDetails",
          "value": {
            "@type": "TechArticle",
            "dependencies": ["child_process", "path"],
            "operations": [
              "Construct ogr2ogr command with arguments",
              "Execute via child_process.spawn() or exec()",
              "Set environment variables (GDAL_DATA, PROJ_LIB)",
              "Capture stdout/stderr for logging",
              "Handle exit codes and errors"
            ],
            "cliFlags": {
              "-f": "Output format driver (GeoJSON, PostgreSQL, etc.)",
              "-t_srs": "Target spatial reference system (EPSG code)",
              "-s_srs": "Source spatial reference system",
              "-nln": "New layer name in target database",
              "-overwrite": "Overwrite existing output",
              "-append": "Append to existing layer",
              "-clipsrc": "Clip source by extent or geometry",
              "-where": "SQL WHERE clause for filtering"
            }
          }
        },
        {
          "@type": "PropertyValue",
          "name": "nodeJsIntegration",
          "value": {
            "@type": "SoftwareSourceCode",
            "programmingLanguage": "JavaScript",
            "codeRepository": "child_process module",
            "text": "const { spawn } = require('child_process'); const ogr = spawn(OGR2OGR_PATH, args, { env: { GDAL_DATA, PROJ_LIB } });"
          }
        }
      ]
    },
    {
      "@type": "Action",
      "@id": "#gis:postgis-import",
      "name": "Bulk Import Spatial Data to PostGIS",
      "identifier": "postgis-import",
      "description": "Import spatial data files directly into PostgreSQL/PostGIS tables",
      "instrument": [
        {
          "@type": "SoftwareApplication",
          "identifier": "ogr2ogr.exe"
        },
        {
          "@type": "SoftwareApplication",
          "identifier": "ms-ossdata.vscode-pgsql"
        }
      ],
      "target": {
        "@type": "EntryPoint",
        "urlTemplate": "PG:\"dbname={db} host={host} user={user} password={password}\"",
        "example": [
          {
            "@type": "HowToDirection",
            "name": "Import Shapefile",
            "text": "ogr2ogr -f PostgreSQL PG:\"dbname=gisdb\" data.shp -nln cities -lco GEOMETRY_NAME=geom -lco SPATIAL_INDEX=GIST"
          },
          {
            "@type": "HowToDirection",
            "name": "Import GeoJSON with overwrite",
            "text": "ogr2ogr -f PostgreSQL PG:\"dbname=gisdb\" data.geojson -nln parcels -overwrite"
          }
        ]
      },
      "additionalProperty": [
        {
          "@type": "PropertyValue",
          "name": "layerCreationOptions",
          "value": {
            "GEOMETRY_NAME": "Column name for geometry (default: wkb_geometry)",
            "SPATIAL_INDEX": "Index type: GIST, SPGIST, NONE",
            "OVERWRITE": "Drop existing table before import",
            "SCHEMA": "Target schema name (default: public)",
            "PRECISION": "Coordinate precision (YES/NO)"
          }
        }
      ]
    },
    {
      "@type": "Action",
      "@id": "#gis:postgis-export",
      "name": "Export PostGIS Data to Files",
      "identifier": "postgis-export",
      "description": "Export PostgreSQL/PostGIS tables to vector file formats",
      "instrument": {
        "@type": "SoftwareApplication",
        "identifier": "ogr2ogr.exe"
      },
      "target": {
        "@type": "EntryPoint",
        "example": [
          {
            "@type": "HowToDirection",
            "name": "Export to GeoJSON",
            "text": "ogr2ogr -f GeoJSON output.geojson PG:\"dbname=gisdb\" -sql \"SELECT * FROM cities WHERE population > 100000\""
          },
          {
            "@type": "HowToDirection",
            "name": "Export to Shapefile",
            "text": "ogr2ogr -f \"ESRI Shapefile\" output.shp PG:\"dbname=gisdb\" table_name"
          }
        ]
      },
      "result": {
        "@type": "DataDownload",
        "encodingFormat": [
          "application/geo+json",
          "application/x-esri-shapefile",
          "application/vnd.google-earth.kml+xml",
          "application/geopackage+sqlite3"
        ]
      }
    }
